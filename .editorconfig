root = true

[*.MD]
trim_trailing_whitespace = false
insert_final_newline = false

[*.tf]
indent_style = space
indent_size = 2
charset = utf-8

[*.json]
indent_style = space
indent_size = 2
charset = utf-8

[*.yml]
indent_style = space
indent_size = 2
charset = utf-8

[*.yaml]
indent_style = space
indent_size = 2
charset = utf-8

[*]
indent_style = tab
indent_size = 2
charset = utf-8
root = true
end_of_line = lf
tab_width = 2
